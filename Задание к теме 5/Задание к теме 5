#1 задание

print("Нахождение расстояния между двумя точками с заданными координатами (x1, y1) и (x2, y2)")

x_1, y_1 = map(int, input("Введите значения координат первой точки (x1, y1) - ").split())
x_2, y_2 = map(int, input("Введите значения координат второй точки (x2, y2) - ").split())

while True:
	if x_1 == x_2 and y_1 == y_2:
		print("Задана одна и та же точка. Вычисление расстояния невозможно. Попробуйте заново.")
		x_1, y_1 = map(int, input("Введите значения координат первой точки (x1, y1) - ").split())
		x_2, y_2 = map(int, input("Введите значения координат второй точки (x2, y2) - ").split())
	else:
		rast = ((x_2 - x_1) ** 2 + (y_2 - y_1) ** 2) ** 0.5
		print("Расстояние между двумя точками равно:", rast)
		break

#2 задание

print("Нахождение длин отрезков AC и BC и их суммы")

A = int(input("Введите значение координаты точки A - "))
B = int(input("Введите значение координаты точки B - "))
C = int(input("Введите значение координаты точки C - "))

while True:
	if A == 0 and B == 0 and C == 0:
		print("Все значения равны нулю. Отрезков не существует. Попробуйте заново.")
		A = int(input("Введите значение координаты точки A - "))
		B = int(input("Введите значение координаты точки B - "))
		C = int(input("Введите значение координаты точки C - "))

	else:
		AC = abs(C - A)
		BC = abs(C - B)
		summ = AC + BC
		print("Длина отрезка AC равна:", AC)
		print("Длина отрезка BC равна:", BC)
		print("Сумма длин отрезков равна:", summ)
		break

#3 задание
print("Нахождение произведения длин отрезков AC и BC")

A = int(input("Введите значение координаты точки A - "))
B = int(input("Введите значение координаты точки B - "))
C = int(input("Введите значение координаты точки C - "))

while True:
	if A == 0 and B == 0 and C == 0:
		print("Все значения равны нулю. Отрезков не существует. Попробуйте заново.")
		A = int(input("Введите значение координаты точки A - "))
		B = int(input("Введите значение координаты точки B - "))
		C = int(input("Введите значение координаты точки C - "))
	else:
		AC = abs(C - A)
		BC = abs(C - B)
		proiz = AC * BC
		print("Произведение длин отрезков равно:", proiz)
		break

#4 задание

print("Нахождение периметра и площади прямоугольника с заданными координатами двух противоположных вершин")

x_1, y_1 = map(int, input("Введите значения координат первой вершины (x1, y1) - ").split())
x_2, y_2 = map(int, input("Введите значения координат противоположной вершины (x2, y2) - ").split())

while True:
	if x_1 == x_2 or y_1 == y_2:
		print("Введены некорректные данные. Невозможно образование прямоугольника на основании таких данных. Попробуйте заново.")
		x_1, y_1 = map(int, input("Введите значения координат первой вершины (x1, y1) - ").split())
		x_2, y_2 = map(int, input("Введите значения координат противоположной вершины (x2, y2) - ").split())

	else:
		side_1 = abs(x_2 - x_1)
		side_2 = abs(y_2 - y_1)
		S = side_1 * side_2
		P = 2 * (side_1 + side_2)
		print("Периметр прямоугольника равен:", P)
		print("Площадь прямоугольника равна:", S)
		break


#5 задание

print("Нахождение периметра и площади треугольника с заданными координатами его вершин")

x_1, y_1 = map(int, input("Введите значения координат первой вершины (x1, y1) - ").split())
x_2, y_2 = map(int, input("Введите значения координат второй вершины (x2, y2) - ").split())
x_3, y_3 = map(int, input("Введите значения координат третьей вершины (x3, y3) - ").split())


while True:
	if x_1 == x_2 == x_3 or y_1 == y_2 == y_3:
		print("Введены некорректные данные. Невозможно образование треугольника на основании таких данных. Попробуйте заново.")
		x_1, y_1 = map(int, input("Введите значения координат первой вершины (x1, y1) - ").split())
		x_2, y_2 = map(int, input("Введите значения координат второй вершины (x2, y2) - ").split())
		x_3, y_3 = map(int, input("Введите значения координат третьей вершины (x3, y3) - ").split())
	else:
		side_1 = ((x_2 - x_1) ** 2 + (y_2 - y_1) ** 2) ** 0.5
		side_2 = ((x_3 - x_2) ** 2 + (y_3 - y_2) ** 2) ** 0.5
		side_3 = ((x_1 - x_3) ** 2 + (y_1 - y_3) ** 2) ** 0.5
		P  = side_1 + side_2 + side_3
		S = 0.5 * abs((x_2 - x_1) * (y_3 - y_1) - (x_3 - x_1) * (y_2  - y_1))
		print("Периметр треугольника равен:", P)
		print("Площадь треугольника равна:", S)
		break
		
