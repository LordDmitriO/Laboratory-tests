#1 задание

print("Изменение значений переменных A и B путем перемещения содержимого A в B и B в A")
A = int(input("Введите значение переменной A - "))
B = int(input("Введите значение переменной B - "))

A_1 = A
A = B
B = A_1

print("Новое значение переменной A равно:", A)
print("Новое значение переменной B равно:", B)

#2 задание

print("Изменение значений переменных A, B и C Cпутем перемещения содержимого A в B, B в C и C в A")
A = int(input("Введите значение переменной A - "))
B = int(input("Введите значение переменной B - "))
C = int(input("Введите значение переменной C - "))

B_1 = B
C_1 = C
B = A
C = B_1
A = C_1

print("Новое значение переменной A равно:", A)
print("Новое значение переменной B равно:", B)
print("Новое значение переменной C равно:", C)

#3 задание

print("Изменение значений переменных A, B и C Cпутем перемещения содержимого A в C, C в B и B в A")
A = int(input("Введите значение переменной A - "))
B = int(input("Введите значение переменной B - "))
C = int(input("Введите значение переменной C - "))

B_1 = B
C_1 = C
C = A
B = C_1
A = B_1

print("Новое значение переменной A равно:", A)
print("Новое значение переменной B равно:", B)
print("Новое значение переменной C равно:", C)

#4 задание

print("Нахождение значения функции при заданном значении x")

x = int(input("Введите значение переменной x - "))

y = 3 * x ** 6 - 6 * x ** 2 - 7

print("Значение функции равно:", y)

#5 задание

print("Нахождение значения функции при заданном значении x")

x = int(input("Введите значение переменной x - "))

y = 4 * (x - 3) ** 6  - 7 * (x - 3) ** 3 + 2

print("Значение функции равно:", y)

#6 задание

print("Вычисление a в степени 8, используя вспомогательную переменную и три операции умножения")

a = int(input("Введите значение a - "))

a = a * a
a = a * a
b = a * a

print("a в степени 8 равно:", b)

#7 задание

print("Вычисление a в степени 15, используя 2 вспомогательных переменных и пять операций умножения")

a = int(input("Введите значение a - "))

b = a * a * a
c = b * b

print("a в степени 15 равно:", c * c * b)
