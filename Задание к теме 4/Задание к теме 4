#1 задание

print("Нахождение площади и периметра прямоугольника со сторонами a и b")
a = int(input("Введите значение стороны a - "))
b = int(input("Введите значение стороны b - "))
while True:
	if a <= 0 or b <= 0:
		print("Введены некорректные данные. Попробуйте заново.")
		a = int(input("Введите значение стороны a - "))
		b = int(input("Введите значение стороны b - "))
	else:	
		S = a * b
		P = 2 * (a + b)
		print("Площадь прямоугольника равна:", S)
		print("Периметр прямоугольника равен:", P)
		break

#2 задание

print("Нахождение длины окружности с диаметром d")
d = int(input("Введите значение диаметра окружности - "))
π = 3.14
while True:
	if d <= 0:
		print("Введены некорректные данные. Попробуйте заново.")
		d = int(input("Введите значение диаметра окружности - "))
	else:
		L = π * d
		print("Длина окружности равна:", L)
		break

#3 задание

print("Нахождение среднего арифметического чисел a и b")

a = int(input("Введите значение числа a - "))
b = int(input("Введите значение числа b - "))

sr_ar = (a + b) / 2

print("Среднее арифметическое равно:", sr_ar)


#4 задание

print("Нахождение суммы, разности, произведения и частного квадратов чисел a и b")

a = int(input("Введите значение числа a - "))
b = int(input("Введите значение числа b - "))
a_2 = a ** 2
b_2 = b ** 2

summ = a_2 + b_2
raz = a_2 - b_2
proiz = a_2 * b_2
chast = a_2 / b_2

print("Сумма квадратов чисел равна:", summ)
print("Разность квадратов чисел равна:", raz)
print("Произведение квадратов чисел равна:", proiz)
print("Частное квадратов чисел равна:", chast)

#5 задание

print("Нахождение суммы, разности, произведения и частного модулей чисел a и b")

a = int(input("Введите значение числа a - "))
b = int(input("Введите значение числа b - "))
a_m = abs(a)
b_m = abs(b)

summ = a_m + b_m
raz = a_m - b_m
proiz = a_m * b_m
chast = a_m / b_m

print("Сумма модулей чисел равна:", summ)
print("Разность модулей чисел равна:", raz)
print("Произведение модулей чисел равна:", proiz)
print("Частное модулей чисел равна:", chast)
